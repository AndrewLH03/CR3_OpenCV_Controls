# Emergency stop service
# Provides different levels of emergency stop functionality

uint8 SOFT_STOP = 0      # Gradual deceleration stop
uint8 HARD_STOP = 1      # Immediate stop with brake
uint8 EMERGENCY = 2      # Full emergency shutdown

uint8 stop_type          # Type of emergency stop to execute
string reason           # Reason for emergency stop
---
bool success            # Whether stop was successful
string message          # Status message
float32 stop_time       # Time taken to stop (seconds)
